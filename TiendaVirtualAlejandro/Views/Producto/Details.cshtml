@model TiendaVirtualAlejandro.Models.Producto

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad)
        </dt>

        <dd>
            @if (Model.Cantidad > 0)
            {
                @Html.DisplayFor(model => model.Cantidad)
            }
            else
            {
                @Html.Label("Sin stock");
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
        </dt>

        <dd>
            <img src="~/Content/Fotos/@Model.Foto" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripción)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripción)
        </dd>

    </dl>
</div>
<p>
    @if (Model.Cantidad > 0)
    {
        @Html.ActionLink("Add To Cart", "AddToCart", new { id = Model.Id }) @Html.Value("|")
    }
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
