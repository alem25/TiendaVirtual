<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tienda Virtual Alejandro</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("El Huerto Ecológico", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (!User.Identity.Name.Equals(""))
                    {
                        <li>@Html.ActionLink("Mis Pedidos", "Index", "Pedido")</li>
                        <li><a href="@Url.Action("MiPerfil","Cliente")">Mi Perfil  <span class="glyphicon glyphicon-user"></span></a></li>
                    }
                    <li><a href="@Url.Action("MiCarrito","Pedido")">Mi Carrito  <span class="glyphicon glyphicon-shopping-cart"></span></a></li>
                    <li>
                        @using (@Html.BeginForm("Search", "Producto", FormMethod.Get, htmlAttributes: new { @class = "form-inline", @style = "padding:0.5em" }))
                        {
                            <div class="col-xs-4 col-sm-12">
                                <div class="input-group">
                                    <input type="text" id="busqueda" name="busqueda" class="form-control" maxlength="15" placeholder="Escribe algo..." />
                                    <div class="input-group-btn">
                                        <button class="btn" type="submit"><span class="glyphicon glyphicon-search"></span></button>
                                    </div>
                                </div>
                            </div>
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - El Huerto Ecológico </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
