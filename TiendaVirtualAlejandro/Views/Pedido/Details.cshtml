@model TiendaVirtualAlejandro.Models.Pedido

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pedido</h4>
    <hr />
    <dl class="dl-horizontal">
    </dl>
</div>
<p>
    <table class="table">
        <tr>
            <th>
                @Html.Label("Producto")
            </th>
            <th>
                @Html.LabelFor(i => Model.Stock.First().Producto.Nombre)
            </th>
            <th>
                @Html.LabelFor(i => Model.Stock.First().Producto.Precio)
            </th>
            <th>
                @Html.Label("Cantidad comprada")
            </th>
            <th>
                @Html.Label("Subtotal")
            </th>
            <th>
            </th>
        </tr>
        @if (Model != null && Model.Stock.Count > 0)
        {
            foreach (var item in Model.Stock)
            {
                <tr>
                    <td>
                        <img src="~/Content/Fotos/@item.Producto.Foto" style="max-width: 64px;" />
                    </td>
                    <td>
                        @Html.ActionLink(item.Producto.Nombre, "Details", "Producto", new { id = item.Id }, null)
                    </td>
                    <td>
                        @Html.DisplayFor(i => item.Producto.Precio) €/Kg
                    </td>
                    <td>
                        @Html.DisplayFor(c => item.Cantidad) Kg <!--value-->
                    </td>
                    <td>
                        @(item.Producto.Precio * item.Cantidad) € <!--value-->
                    </td>
                    <td>
                    </td>
                </tr>
            }
        }
    </table>
    @Html.Label("Total Pedido")
</p>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
